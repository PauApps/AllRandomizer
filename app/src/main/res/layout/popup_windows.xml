<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/fons3"
    tools:context="com.pauapps.pau.allrandomizer.Activities.PrincipalActivity">

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_type_to_randomize"
            android:textColor="@color/basic"
            android:textSize="@dimen/popup_title" />

        <RadioButton
            android:id="@+id/lists"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectedOption"
            android:text="@string/text_lists"
            android:textColor="@color/basic"
            android:textSize="@dimen/popup_title" />

        <RadioButton
            android:id="@+id/numbers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="selectedOption"
            android:text="@string/numbers"
            android:textColor="@color/basic"
            android:textSize="@dimen/popup_title" />
    </RadioGroup>

</RelativeLayout>